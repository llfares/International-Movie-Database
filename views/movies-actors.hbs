{{!-- Creating Movies Actors table --}}
<table id="movies-actors-table">
{{!-- Header section --}}
    <thead>
     {{!--Insert button --}}
    <div>
        <form action="/add-movies-actors-form" method="get">
            <button type="submit">Insert New</button>
        </form>

    {{!-- Search Form --}}

    <form id="input-title-search" method='GET' action='/movies-actors'>
        <label for="input-title"></label>
        <input type="text" name="title" id="input-title-search" placeholder="Search movie title...">

        <input type="submit">
        <a href='/'><button>Reset</button></a>
    </form>
    </div>

    <tr>
        <th>Movie ID</th>
        <th>Title</th>
        <th>Actor ID</th>
        <th>Actor</th>
        <th>Operations</th>
    </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>
        {{#each data}}
        <tr data-value={{this.Movies_movieID}}>
            <td>{{this.Movies_movieID}}</td>
            <td>{{this.movieTitle}}</td>
            <td>{{this.Actors_actorID}}</td>
            <td>{{this.actorName}}</td>
            <td>
                <a href="/update-movies-actors-form/{{this.Movies_movieID}}/{{this.Actors_actorID}}"><button type="submit">Update</button> </a>
                <button onclick="deleteMoviesActors('{{this.Movies_movieID}}', '{{this.Actors_actorID}}')">Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete-movies-actor.js"></script>
