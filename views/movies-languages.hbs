{{!-- Creating Movies - Languages table --}}
<table id="movies-languages-table">
{{!-- Header section --}}
    <thead>
        {{!--Insert button --}}
        <div>
            <form action="/add-movies-languages-form" method="get">
                <button type="submit">Insert New</button>
            </form>

        {{!-- Search Form --}}

        <form id="input-title-search" method='GET' action='/movies-languages'>
            <label for="input-title"></label>
            <input type="text" name="title" id="input-title-search" placeholder="Search movie title...">

            <input type="submit">
            <a href='/'><button>Reset</button></a>
        </form>
        </div>

    <tr>
        <th>Movie ID</th>
        <th>Title</th>
        <th>Language ID</th>
        <th>Language</th>
        <th>Operations</th>
    </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>
    {{#each data}}
        <tr data-value={{this.Movies_movieID}}>
            <td>{{this.Movies_movieID}}</td>
            <td>{{this.movieTitle}}</td>
            <td>{{this.Languages_languageID}}</td>
            <td>{{this.languageName}}</td>
            <td>
                <a href="/update-movies-languages-form/{{this.Movies_movieID}}/{{this.Languages_languageID}}"><button type="submit">Update</button> </a>
                <button onclick="deleteMoviesLanguages('{{this.Movies_movieID}}', '{{this.Languages_languageID}}')">Delete</button>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
<script src="./js/delete-movies-language.js"></script>
